# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /about                      controllers.Application.about
GET     /contact                    controllers.Application.contact
GET     /sponsors                   controllers.Application.sponsors

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# News routes
# Create
GET     /news/new                   controllers.News.create
POST    /news                       controllers.News.save
# Retrieve
GET     /news                       controllers.News.index
GET     /news/:id                   controllers.News.view(id: Long)
# Update
GET     /news/:id/edit              controllers.News.edit(id: Long)
POST    /news/:id                   controllers.News.update(id: Long)
# Delete
POST    /news/:id/delete            controllers.News.delete(id: Long)

GET     /hackathons.json             controllers.Application.hackathonsJson
# Problems routes
# Create
GET 		/problems/new								controllers.Problem.create
POST		/problems										controllers.Problem.save

# Retrieve
GET 		/problems										controllers.Problem.index
GET			/problems/:id								controllers.Problem.view(id: Long)

# Update
GET			/problems/:id/edit					controllers.Problem.edit(id: Long)
POST		/problems/:id/update				controllers.Problem.update(id: Long)

# Delete
POST		/problems/:id/delete				controllers.Problem.delete(id: Long)
