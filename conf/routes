# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# News routes
# Create
GET     /news/new                   controllers.News.newNews
POST    /news                       controllers.News.create
# Retrieve
GET     /news                       controllers.News.index
GET     /news/view/:id              controllers.News.view(id: Long)
# Update
GET     /news/edit/:id              controllers.News.edit(id: Long)
POST    /news/update/:id            controllers.News.update(id: Long)
# Delete
POST    /news/delete/:id            controllers.News.delete(id: Long)

