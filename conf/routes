# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /about                      controllers.Application.about
GET     /contact                    controllers.Application.contact
GET     /profile                    controllers.Application.profile

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Login page
GET     /login                      securesocial.controllers.LoginPage.login
GET     /logout                     securesocial.controllers.LoginPage.logout

# User Registration
GET     /signup                     securesocial.controllers.Registration.signUp
POST    /signup                     securesocial.controllers.Registration.handleSignUp

# Authentication
GET     /authenticate/:provider     securesocial.controllers.LoginPage.authenticate(provider)

# News routes
# Create
GET     /news/new                   controllers.News.create
GET     /news/new/:hackathonId      controllers.News.createHackathonNews(hackathonId: Long)
POST    /news                       controllers.News.save
# Retrieve
GET     /news                       controllers.News.index
GET     /news/:id                   controllers.News.view(id: Long)
GET     /news/search/:label         controllers.News.search(label: String)
# Update
GET     /news/:id/edit              controllers.News.edit(id: Long)
POST    /news/:id                   controllers.News.update(id: Long)
# Delete
POST    /news/:id/delete            controllers.News.delete(id: Long)

# Problems routes
# Create
GET     /problems/new               controllers.Problem.create
POST    /problems                   controllers.Problem.save
# Retrieve
GET     /problems                   controllers.Problem.index
GET     /problems/:id               controllers.Problem.view(id: Long)
# Update
GET     /problems/:id/edit          controllers.Problem.edit(id: Long)
POST    /problems/:id/update        controllers.Problem.update(id: Long)
# Delete
POST    /problems/:id/delete        controllers.Problem.delete(id: Long)

# Teams routes
# Create
GET     /teams/new               	controllers.Team.create
POST    /teams                   	controllers.Team.save
# Retrieve
GET     /teams                   	controllers.Team.index
GET     /teams/:id               	controllers.Team.view(id: Long)
# Update
GET     /teams/:id/edit          	controllers.Team.edit(id: Long)
POST    /teams/:id/update        	controllers.Team.update(id: Long)
# Delete
POST    /teams/:id/delete        	controllers.Team.delete(id: Long)
# Join
GET    	/teams/:id/join				controllers.Team.join(id: Long)
GET    	/teams/:id/disconnect		controllers.Team.disconnect(id: Long)
GET    	/teams/:id/:uid/disconnect	controllers.Team.disconnectUser(id: Long, uid: Long)

# Locations routes
# Create
GET     /locations/new              controllers.Location.create
POST    /locations                  controllers.Location.save
# Retrieve
GET     /locations                  controllers.Location.index
GET     /locations/:id              controllers.Location.view(id: Long)
# Update
GET     /locations/:id/edit         controllers.Location.edit(id: Long)
POST    /locations/:id/update       controllers.Location.update(id: Long)
# Delete
POST    /locations/:id/delete       controllers.Location.delete(id: Long)

# Hackathons routes
# Create
GET     /hackathons/new              controllers.Hackathon.create
POST    /hackathons                  controllers.Hackathon.save
# Retrieve
GET     /hackathons                  controllers.Hackathon.index
GET     /hackathons/:id              controllers.Hackathon.view(id: Long)
# Update
GET     /hackathons/:id/edit         controllers.Hackathon.edit(id: Long)
POST    /hackathons/:id/update       controllers.Hackathon.update(id: Long)
# Delete
POST    /hackathons/:id/delete       controllers.Hackathon.delete(id: Long)

# Prizes routes
# Create
GET     /prizes/new					controllers.Prize.create
POST    /prizes                   	controllers.Prize.save
# Retrieve
GET     /prizes                   	controllers.Prize.index
GET     /prizes/:id                 controllers.Prize.view(id: Long)
# Update
GET     /prizes/:id/edit          	controllers.Prize.edit(id: Long)
POST    /prizes/:id/update        	controllers.Prize.update(id: Long)
# Delete
POST    /prizes/:id/delete        	controllers.Prize.delete(id: Long)

GET     /hackathons.json            controllers.Hackathon.hackathonsJson

# Sponsors routes
# Create
GET     /sponsors/new					controllers.Sponsor.create
POST    /sponsors                   	controllers.Sponsor.save
# Retrieve
GET     /sponsors                   	controllers.Sponsor.index
GET     /sponsors/:id                 	controllers.Sponsor.view(id: Long)
# Update
GET     /sponsors/:id/edit          	controllers.Sponsor.edit(id: Long)
POST    /sponsors/:id/update        	controllers.Sponsor.update(id: Long)
# Delete
POST    /sponsors/:id/delete        	controllers.Sponsor.delete(id: Long)

GET     /hackathons.json            controllers.Hackathon.hackathonsJson